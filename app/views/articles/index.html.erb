<main class="container py-3">
  <h1>Hello, Rails!</h1>
  <section>
    <ul class="list-group mt-3">
      <% @articles.each do |article| %>
        <li class="list-group-item">
          <%= link_to article.title, article %>
        </li>
      <% end %>
    </ul>
    <div class="mt-3">
      <%= link_to "Create article", new_article_path, class: "btn btn-primary" %>
    </div>
  </section>
</main>