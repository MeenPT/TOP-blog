 <%= form_with model: @article do |form| %>
  <div class="mb-3">
    <%= form.label :title, class: "form-label" %><br>
    <%= form.text_field :title, class: "form-control" %> <% @article.errors.full_messages_for(:title).each do |message| %>
      <div class="fs-6 fw-light text-opacity-75"><%= message %></div>
    <% end %>
  </div>
  <div class="mb-3">
    <%= form.label :body, class: "form-label" %><br>
    <%= form.text_area :body, class: "form-control" %>
    <% @article.errors.full_messages_for(:body).each do |message| %>
      <div class="fs-6 fw-light text-opacity-75"><%= message %></div>
    <% end %>
  </div >
  <div>
    <%= form.submit  class: "btn btn-primary" %>
  </div>
<% end %>